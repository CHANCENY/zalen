<style>
  .menu-services-row {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
  }

  .service-card {
    width: 20%;
    border: 1px solid #e5e5e5;
    border-radius: 6px;
    background: #fff;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .service-image img {
    width: 100%;
    height: 120px;
    object-fit: cover;
    border-radius: 6px 6px 0 0;
  }

  .service-body {
    padding: 10px;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .service-title {
    font-size: 14px;
    font-weight: 600;
    margin: 0 0 6px;
  }

  .service-description {
    font-size: 13px;
    color: #555;
    margin: 0 0 10px;
    flex: 1;
  }

  .service-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .service-price {
    font-weight: 600;
    font-size: 13px;
  }

  .service-edit {
    font-size: 12px;
    color: #0074bd;
    text-decoration: none;
  }

  .service-edit:hover {
    text-decoration: underline;
  }

</style>
<div class="menu-services-row">
  {% for item in list %}
    <div class="service-card">

      {% if item.image %}
        <div class="service-image">
          <img src="{{ item.image }}">
        </div>
      {% endif %}

      <div class="service-body">
        <h5 class="service-title">{{ item.title }}</h5>

        {% if item.description %}
          <p class="service-description">
            {{ item.description|striptags|truncate(90, true, 'â€¦') }}
          </p>
        {% endif %}

        <div class="service-footer">
          <span class="service-price">
            {{ item.currency }} {{ item.price }}
          </span>
          {{ item.link }}
        </div>
      </div>

    </div>
  {% endfor %}
</div>
<noscript id="clone-paragraph-new-id" style="display: none;"></noscript>
