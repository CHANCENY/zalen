<table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
  <thead>
  <tr>
    <th style="padding: 10px; border: 1px solid #ccc; text-align: left;">Description</th>
    <th style="padding: 10px; border: 1px solid #ccc; text-align: left;">Unit Price (Excl. VAT)</th>
    <th style="padding: 10px; border: 1px solid #ccc; text-align: left;">VAT (21%)</th>
    <th style="padding: 10px; border: 1px solid #ccc; text-align: left;">Total (Incl. VAT)</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td style="padding: 10px; border: 1px solid #ccc; text-align: left;">{{ content.description }}</td>
    <td style="padding: 10px; border: 1px solid #ccc; text-align: left;">{{ getCurrencySymbol(content.currency) }}{{ content.rates.price_excl_vat }}</td>
    <td style="padding: 10px; border: 1px solid #ccc; text-align: left;">{{ getCurrencySymbol(content.currency) }}{{ content.rates.vat_amount }}</td>
    <td style="padding: 10px; border: 1px solid #ccc; text-align: left;">{{ getCurrencySymbol(content.currency) }}{{ content.rates.total }}</td>
  </tr>
  <tr style="font-weight: bold; background-color: #f9f9f9;">
    <td colspan="3" style="padding: 10px; border: 1px solid #ccc; text-align: left;">Total Amount Due</td>
    <td style="padding: 10px; border: 1px solid #ccc; text-align: left;">{{ getCurrencySymbol(content.currency) }}{{ content.rates.total }}</td>
  </tr>
  </tbody>
</table>
