    {% set vergaderen = fields.field_vergadergelegenheden.content|striptags()|split(',') %}
    {% endif %}

    <ul class="alle-zalen-gelegenheden-lijst">
      {% if feesten %}
        {% for feest in feesten %}
          <li>{{ feest }}</li>
        {% endfor %}
      {% endif %}
      {% if concerten  %}
        {% for concert in concerten %}
          <li>{{ concert }}</li>
        {% endfor %}
      {% endif %}
      {% if commercen %}
        {% for commerce in commercen %}
          <li>{{ commerce }}</li>
        {% endfor %}
      {% endif %}
      {% if vergaderen %}
        {% for vergader in vergaderen %}
          <li>{{ vergader }}</li>
        {% endfor %}
      {% endif %}
    </ul>
  </div>

