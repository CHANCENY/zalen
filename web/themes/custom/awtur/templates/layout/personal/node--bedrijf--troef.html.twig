<style>
    .troevenicons{
        display: flex;
        flex-wrap: wrap;
        justify-content: space-evenly;
        gap: 12px;
        margin-top: 64px;
    }
    .troevenicons > div{
      background-color: #fbfbfb;
      border-radius: 50%;
    }
    .troevenicons img{
      max-width: clamp(3.4375rem, 2.5938rem + 4.5vw, 6.25rem);
      max-height: clamp(3.4375rem, 2.5938rem + 4.5vw, 6.25rem);
      
    }
    .kleur-troef{
        filter: grayscale();
    }
    .grijs-troef{
        filter: opacity(0.1);
    }
    .troeve{
      position: relative;
      display: inline-block;
    }
    .troeve .troeve-text{
      visibility: hidden;
      width: 120px;
      background-color: #343434;
      color: #fff;
      font-size: clamp(0.6875rem, 0.5804rem + 0.2857vw, 0.8125rem);
      text-align: center;
      border-radius: 6px;
      padding: 4px 0;
      position: absolute;
      z-index: 10;
      top: 100%;
      left: 50%;
      margin-left: -60px;
    }
    .troeve:hover .troeve-text{
      visibility: visible;
    }
</style>
<article>
    <div class="troevenicons">
